{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "lib": [
      "ES2023"
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "declaration": true,
    "target": "ES2020",
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".vscode",
    "**/*.test.ts",
    "**/__tests__/*"
  ]
}
